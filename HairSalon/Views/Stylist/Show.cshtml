@using HairSalon.Models;

<h3>Here are all the clients for this stylist:</h3>

<ol>
@foreach (var client in @Model["clients"])
{
  <li><a href='/stylists/@Model["stylist"].GetId()/clients/@client.GetId()'>@client.GetName()</a></li>
}
</ol>

<h3>Here are all the specialties for this stylist:</h3>

  <ol>
  @foreach (var specialty in @Model["specialtyStylists"])
  {
    <li><a href='/specialty/@specialty.GetId()'>@specialty.GetSpecialty()</a></li>
  }
  </ol>

<h3>Add a specialty to this stylist:</h3>

<form action='/stylists/@Model["stylist"].GetId()/specialty/new' method='post'>
  <label for='specialtyId'>Select a specialty</label>
  <select id='specialtyId' name='specialtyId' type='text'>
  @foreach (var specialty in @Model["allSpecialties"])
  {
    <option value='@specialty.GetId()'>@specialty.GetSpecialty()</option>
  }
  </select>
  <button type='submit'>Add</button>
</form>

<p><a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add a new client</a></p>
<p><a href='/stylists'>Return to stylist list</a></p>
<p><a href='/'>Return to Main Page</a></p>
<form action='/stylists/@Model["stylist"].GetId()/delete' method='post'>
  <button type="submit">Click here to delete this stylist.</button>
</form>

<a href='/stylists/@Model["stylist"].GetId()/edit'><button type="submit">Click here to edit stylist name.</button></a>
